<%= render :partial => "feathers/#{@post.feather}/admin", :locals => { :post => @post } %>

URL: <%= link_to @post.url if @post.url %>

<% content_for :actions do %>
  <%= link_to "Back to all posts", posts_path %> |
  <%= link_to "Edit post", edit_post_path(@post) %> |
  <%= link_to "Delete post", @post, :method => "delete", :confirm => "Are you sure?", :class => "delete" %>
<% end %>