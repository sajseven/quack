<%= render :partial => "feathers/#{@post.feather}/show", :locals => { :post => @post } %>

<div class="meta">
  <%= raw "URL: " + link_to(@post.url) + "<br />" if @post.url != "" %>
  Posted: <%= @post.date %>
</div>

<% content_for :actions do %>
  <%= link_to "Back to all posts", posts_path %> |
  <%= link_to "Edit post", edit_post_path(@post) %> |
  <%= link_to "Delete post", @post, :method => "delete", :confirm => "Are you sure?", :class => "delete" %>
<% end %>